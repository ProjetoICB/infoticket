<%= form_for @aviso, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :quadro_de_avisos, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :quadro_de_avisos, :class => 'text_area'  , :size => "30x10"%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Confirmar", :class => 'btn btn-primary' %>
    <%= link_to "Cancelar", avisos_path, :class => 'btn btn-default' %>
  </div>
<% end %>

