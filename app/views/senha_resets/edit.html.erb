<%= form_for @user, :url => senha_reset_path(params[:id]) do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h1>Aten&ccedil;&atilde;o!</h1>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :senha %>
    <%= f.password_field :senha %>
  </div>
  <div class="field">
    <%= f.label :senha_confirmation %>
    <%= f.password_field :senha_confirmation %>
  </div>
  <div class="actions"><%= f.submit "Confirmar nova Senha" %></div>
<% end %>