<div class="page-header">
  <h1> Resumo Admin </h1>
</div>

<table id="resumopp" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Usu&aacute;rio:</th>
    <th>Ramal:</th>
    <th>Pr&eacute;dio:</th>
    <th>Local:</th>
    <th>T&iacute;tulo:</th>
    <th>T&eacute;cnico:</th>
    <th>Status:</th>
    <th>A&ccedil;&otilde;es:</th>


  </tr>
  </thead>

  <tbody>
  <% @chamados.each do |ch| %>
     <!-- < % if session_user.nome == ch.tecnico %> -->


      <% if current_user.nomeUsuario == ch.tecnico %>
          <tr>
            <% if ch.id > 1253 %>
                <td><%= ch.usuario.nomeUsuario %></td>
                <% d =  ch.usuario.numeroTelefoneFormatado.split(":") %>
                <td><%= d[1].to_i %></td>
            <% else %>
                <td><%= ch.user.nome %></td>
                <td><%= ch.user.ramal %></td>
            <% end %>
            <td><%= ch.predio %></td>
            <td><%= ch.sala %></td>
            <td><%= ch.titulo  %></td>
            <td><%= ch.tecnico  %></td>
            <td><%= ch.status %></td>
            <td>
              <%= link_to "Editar", edit_chamado_path(ch), :class => 'btn icon-pencil' %>
              <%= link_to "Mostrar",chamado_path(ch), :class => 'btn icon-search' %>
            </td>
        <% end %>

      </tr>
  <% end %>
  </tbody>
</table>