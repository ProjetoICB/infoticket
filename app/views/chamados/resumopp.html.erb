

<% if session_user != nil %>
    <div class="page-header">
      <h1><%=t '.title', :default => t("Resumo Admin") %></h1>
    </div>


    <table id="resumopp" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Usu&aacute;rio:</th>
        <th>Ramal:</th>
        <th>Pr&eacute;dio:</th>
        <th>Local:</th>
        <th>T&iacute;tulo:</th>
        <th>T&eacute;cnico:</th>
        <th>Status:</th>
        <th>A&ccedil;&otilde;es:</th>


      </tr>
      </thead>

      <tbody>
      <% @chamados.each do |ch| %>
          <% if session_user.nome == ch.tecnico %>

      <tr>
                <td><%= ch.user.nome%></td>
                <td><%= ch.user.ramal %></td>
                <td><%= ch.predio %></td>
                <td><%= ch.sala %></td>
                <td><%= ch.titulo  %></td>
                <td><%= ch.tecnico  %></td>
                <td><%= ch.status %></td>
		  <td>
 			<%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_chamado_path(ch), :class => 'btn icon-pencil' %>

  			<%= link_to t('.show', :default => t("helpers.links.visualizar")),
                      chamado_path(ch), :class => 'btn icon-search' %>
		  </td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>

<% end %>