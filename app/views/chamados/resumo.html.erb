<script type="text/javascript">
    $(document).ready(function() {
        $('#resumog').dataTable({
            "oLanguage": {
                "sProcessing":   "Processando...",
                "sLengthMenu":   "Mostrar _MENU_ registros",
                "sZeroRecords":  "Sem resultados",
                "sInfo":         "Mostrando de _START_ ate _END_ de _TOTAL_ registros",
                "sInfoEmpty":    "Mostrando de 0 ate 0 de 0 registros",
                "sInfoFiltered": "(filtrado de _MAX_ registros no total)",
                "sInfoPostFix":  "",
                "sSearch":       "Buscar:",
                "sUrl":          "",
                "oPaginate": {
                    "sFirst":    "Primeiro",
                    "sPrevious": "Anterior",
                    "sNext":     "Seguinte",
                    "sLast":     "Ultimo"
                }
            }
        });
    });
</script>

<div class="page-header">
  <h1>Resumo Geral</h1>
</div>

<table id="resumog" class="table table-striped table-bordered">
    <thead>
        <tr>
          <th>Usuário:</th>
          <th>Ramal:</th>
          <th>Prédio:</th>
          <th>Local:</th>
          <th>Título:</th>
          <th>Técnico:</th>
          <th>Status:</th>
        </tr>
    </thead>

    <tbody>
        <% @chamados.each do |ch| %>
            <tr>
              <% if ch.id > 1252 %>
                  <td><%= ch.usuario.nomeUsuario %> </td>
                  <% d = ch.usuario.numeroTelefoneFormatado.split(":") %>
                  <td><%= d[1].to_i %></td>
              <% else %>
                  <td><%= ch.user.nome%></td>
                  <td><%= ch.user.ramal %></td>
              <% end %>
              <td><%= ch.predio %></td>
              <td><%= ch.sala %></td>
              <td><%= ch.titulo  %></td>
              <td><%= ch.tecnico  %></td>
              <td><%= ch.status %></td>
            </tr>
        <% end %>
    </tbody>
 </table>

<%= link_to "Voltar", chamados_path, class: "btn btm-default" %>
